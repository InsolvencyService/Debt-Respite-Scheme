@model Insolvency.Portal.Models.ViewModels.Creditor.CreditorDebtEligibilityReviewConfirmViewModel;

@{
    ViewData["Title"] = "Debt Eligibility Review";
    ViewData["Index"] = 0;
}

<div class="govuk-grid-column-full">
    <a id="back-link" class="govuk-back-link" href="javascript: history.go(-1)">Back</a>
</div>
<div class="govuk-grid-column-two-thirds" id="content">
    <h1 id="heading" class="govuk-heading-l">Confirm review details</h1>
    <h2 id="lead-line" class="govuk-heading-m">You’re asking <span id="ma-name">Advice UК</span> to review this debt</h2>
    <h3 id="debt-heading" class="govuk-heading-s govuk-!-margin-bottom-0 govuk-!-margin-top-5">Debt</h3>
    <partial name="Partials/_DebtDetailsListItem" model="Model.Debt" view-data="ViewData" />

    <h3 id="reason" class="govuk-label govuk-!-font-weight-bold"><strong>Reason for review</strong></h3>
    <p id="reason-text" class="govuk-body">@Model.ReasonLabel</p>

    <h3 id="detail" class="govuk-label govuk-!-font-weight-bold"><strong>Details to support the review</strong></h3>
    <p id="detail-text" class="govuk-body break-word">@Model.CreditorNotes</p>

    <form method="post" asp-action="DebtEligibilityReviewConfirmPost" asp-controller="Creditor" asp-route-journeyKey="@ViewData["JourneyKey"].ToString()">
        <input asp-for="CreditorNotes" type="hidden" />
        <input asp-for="Reason" type="hidden" />
        <input asp-for="DebtId" type="hidden" value="@Model.Debt.Id" />
        <button id="submit-button" class="govuk-button" value="submit" data-module="govuk-button" type="submit">
            Confirm and submit
        </button>
    </form>
</div>
