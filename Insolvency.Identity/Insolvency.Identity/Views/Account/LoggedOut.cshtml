@model Insolvency.Identity.Models.LoggedOutViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="text-danger">Logout.</h1>
<h2 class="text-danger">You are being logged out now.</h2>
<span>
    You will be redirected automatically in <span id="countdown-seconds"></span> seconds to complete logout process. <br />
    If you are not redirected automatically, please click <a id="complete-logout-link" asp-controller="Account" asp-action="CompleteLogout" asp-route-logoutId="@Model.LogoutId">here</a>.
</span>

@if (!string.IsNullOrEmpty(Model.SignOutIframeUrl))
{
    <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
}


<script src="~/js/signout-redirect.js"></script>